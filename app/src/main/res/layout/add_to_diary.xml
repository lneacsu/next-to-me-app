<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locatie"
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:paddingBottom="20dp" />

    <RatingBar
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locatie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:numStars="5"
        android:isIndicator="false"
        android:paddingTop="5dp" />
    <EditText
        android:layout_below="@id/rating"
        android:id="@+id/descriere"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/field_post_title_margin_bottom"
        android:layout_marginLeft="@dimen/field_post_title_margin"
        android:layout_marginRight="@dimen/field_post_title_margin"
        android:layout_marginTop="5dp"
        android:hint="Descriere"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cruz"
        android:layout_below="@id/descriere"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>