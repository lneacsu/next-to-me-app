<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/row_padding_vertical">
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/card_color"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
<RelativeLayout
    android:id="@+id/longPress"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/row_padding_vertical">

    <TextView
        android:id="@+id/locVizitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:fontFamily="serif"
        android:text="loc"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="17dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/adresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locVizitat"
        android:layout_marginRight="20dp"
        android:fontFamily="serif"
        android:text="adresa"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="data"
        android:textColor="@color/wallet_hint_foreground_holo_light"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imagine"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/adresa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/loadDescriere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagine"
        android:layout_marginTop="10dp"
        android:text="descriere"
        android:lineSpacingExtra="8sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="italic" />

    <RatingBar
        android:id="@+id/ratingMemory"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadDescriere"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:paddingTop="7dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/loadDescriere"
        android:background="@color/grey_500"
        android:visibility="visible" />

</RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>